{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "declaration": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es2018", "dom"]
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
